-------------------------------------------------------------------------------------
-- Library declarations
-------------------------------------------------------------------------------------
library ieee;
use ieee.std_logic_1164.all;

-------------------------------------------------------------------------------------
-- Entity declaration
-------------------------------------------------------------------------------------
entity my_basys3 is
   port(
    --Basys Resources:
      my_btnu, my_sw2: in std_logic;
      my_led5: out std_logic
   );
end my_basys3;

architecture my_top_arch of my_basys3 is
----------------------------------------------------------------------------------------------------
-- Components declaration
----------------------------------------------------------------------------------------------------

component my_comp is
   port(
      a,b: in std_logic;
      f: out std_logic
   );
end component;

----------------------------------------------------------------------------------------------------
-- Signal declaration
----------------------------------------------------------------------------------------------------
--   signal s0, s1: std_logic;

----------------------------------------------------------------------------------------------------
-- Architecture body
----------------------------------------------------------------------------------------------------

begin

U01 : my_comp  
  PORT MAP (
    a => my_btnu,
    b => my_sw2,
    f => my_led5
  );

end my_top_arch;
